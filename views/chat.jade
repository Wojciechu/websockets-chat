doctype html
html
  head
    title Chat
    link(rel="stylesheet", type="text/css", href="css/chat.css")
  body
    div.menu
      a.logout(href="/logout") Logout
      button.users Users online: 
        span.count
      div.you You are logged in as: 
        span.name(data-username=username)!= username
      ul.users-list
    ul.messages
    form.send-box
      input(autocomplete="off")
      button Send
    script(src="/socket.io/socket.io.js")
    script(src="https://code.jquery.com/jquery-2.1.3.min.js")
    script(type="text/javascript", src="js/helpers.js")
    script(type="text/javascript", src="js/chat.js")