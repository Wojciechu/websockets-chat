doctype html
html
  head
    title Chat
    link(rel="stylesheet", type="text/css", href="chat.css")
  body
    div.menu
      a.logout(href="/logout") Logout
      button.users Users online: 
        span.count
      div.you You are logged in as: 
        span.name
      ul.users-list
    ul#myName
    ul#messages
    form#msg
      input#m(autocomplete="off")
      button Send
    script(src="/socket.io/socket.io.js")
    script(src="https://code.jquery.com/jquery-2.1.3.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js")
    script(type="text/javascript", src="helpers.js")
    script(type="text/javascript", src="communication.js")